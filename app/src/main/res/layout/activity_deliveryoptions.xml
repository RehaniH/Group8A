<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="11dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:text="DELIVERY OPTIONS"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="15sp"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:text="Deliver to address" />

    <Button
        android:id="@+id/button5"
        android:layout_width="379dp"
        android:layout_height="32dp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@color/colorAccent"
        android:text="ADD DELIVERY ADDRESS"
        android:textColor="@android:color/background_light" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="15sp"
        android:text="Pick up from store (Select Date)" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="20sp"
        android:text="(Only available in Sri lanka- 1 outlet) " />

    <DatePicker
        android:id="@+id/Datepicker"
        android:layout_width="330dp"
        android:layout_height="367dp"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="15sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:text="We would like to contact you in an emergency" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:inputType="textPersonName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@color/colorAccent"
        android:text="Continue"
        android:textColor="@android:color/background_light" />

    </LinearLayout>


</ScrollView>